{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Node.js Debug Port",
            "request": "attach",
            "port": 9229,
            "type": "node",
            "skipFiles": [
                "<node_internals>/**",  // faz com que o debug evite entrar nesses arquivos
                "${workspaceFolder}/node_modules/**/*.js", // faz com que o debug evite entrar nesses arquivos
            ],
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "restart": true
        }
    ]
}